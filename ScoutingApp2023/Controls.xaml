<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScoutingApp2023.Controls"
             Title="Controls">
    <ContentPage.Resources>
        <ControlTemplate x:Key="ConeControlTemplate">
            <FlexLayout
                x:Name="flex1"
                Padding="0" >
                <ImageButton
                    WidthRequest="60"
                    HeightRequest="60"
                    Source="cone.jpg" />
                <ImageButton 
                    WidthRequest="60"
                    HeightRequest="60"
                    Source="cone.jpg" />
                <Picker x:Name="base1">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>None</x:String>
                            <x:String>Cone</x:String>
                            <x:String>Cube</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
            </FlexLayout>
        </ControlTemplate>
    </ContentPage.Resources>
</ContentPage>